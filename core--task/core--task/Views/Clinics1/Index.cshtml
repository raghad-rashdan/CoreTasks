@model IEnumerable<core__task.Models.Clinic>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClinicName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClinicImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClinicDis)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClinicName)
            </td>
            <td>
                    <img src="~/image/@item.ClinicImg" width="100px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClinicDis)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ClinicId" class="btn btn-success">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClinicId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClinicId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
